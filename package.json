  "devDependencies": {
    "@types/better-sqlite3": "^7.4.0",
    "@types/chai": "^4.2.21",
    "@types/luxon": "^2.0.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "chai": "^4.3.4",
