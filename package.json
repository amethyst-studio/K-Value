{
  "name": "k-value",
  "description": "Node.js Map-like API based key-value storage with multiple persistent backend adapters.",
  "version": "1.2.4",
  "license": "MIT",
  "author": "Samuel J Voeller <samuel.voeller@amethyst.live> (https://chat.amethyst.live/)",
  "contributors": [],
  "keywords": [
    "map",
    "key",
    "value",
    "keyv",
    "key-value",
    "map-like",
    "library"
  ],
  "homepage": "https://github.com/amethyst-studio/k-value",
  "repository": {
    "url": "git@github.com/amethyst-studio/k-value.git"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">6.12.0"
  },
  "engineStrict": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist/",
    "/package.json",
    "/README.md",
    "/LICENSE.md"
  ],
  "scripts": {
    "prepare": "husky install",
    "stage:eslint": "eslint .",
    "stage:build": "npx tsc --build",
    "stage:tests": "mocha './tests/**/*.js'",
    "project:build": "npm run stage:eslint && npm run stage:build && npm run stage:tests",
    "project:upgrade": "npx npm-check-updates -u --target latest && wget https://www.toptal.com/developers/gitignore/api/node,yarn,webstorm+all,visualstudiocode,vscode -O ./.gitignore && cat ./custom.gitignore >> .gitignore",
    "project:generate-docs": "typedoc --out ./docs/ ./lib/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run stage:eslint",
      "pre-push": "npm run project:build"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^6.0.0",
    "mocha": "^8.3.2",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/luxon": "^1.26.4",
    "javascript-serializer": "^1.0.0",
    "luxon": "^1.26.0",
    "sql-ts": "^5.2.2"
  },
  "optionalDependencies": {
    "better-sqlite3": "^7.1.5",
    "mysql2": "^2.2.5"
  },
  "root": true
}
