    "/LICENSE.md"
  ],
  "scripts": {
    "lint": "eslint .",
    "build": "npx tsc --build",
    "test": "mocha './tests/**/*.js'",
    "docs": "typedoc --mode file --out ./docs/ ./lib/ && git reset && git add ./docs/ && git commit -m 'chore(docs, auto): Auto-generated Documentation with TypeDocs.' --no-verify",
    "quick": "npm run lint && npm run build && npm run test",
    "prepack": "npm run quick"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run quick"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
